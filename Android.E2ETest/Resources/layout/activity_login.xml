<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ServiceUri"
        android:hint="@string/MobileServiceUri" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ServiceTags"
        android:hint="@string/Tags" />
    <Button
        android:text="@string/RunTests"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RunTests" />
    <Button
        android:text="@string/MSALogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MSALogin" />
    <Button
        android:text="@string/AADLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AADLogin" />
    <Button
        android:text="@string/GoogleLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GoogleLogin" />
    <Button
        android:text="@string/FacebookLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FacebookLogin" />
    <Button
        android:text="@string/TwitterLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TwitterLogin" />
    <TextView
        android:text="@string/LoginTestResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LoginTestResult" />
</LinearLayout>
